<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context="com.jazzyarchitects.studentassistant.Fragment.DailyTimeTable"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="@color/themeColor3">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:text="Day"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/todayView"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:text="Time"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:gravity="right|end|center_vertical"
            android:paddingBottom="5dp"
            android:id="@+id/timeView"
            android:background="@color/themeColor3"/>



    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/horizontalScrollView"
        android:layout_weight="1.3">


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:id="@+id/timeTable" />


    </HorizontalScrollView>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="#cdcdcd"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="4" >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="2.5dp"
            android:layout_marginEnd="2.5dp"
            android:orientation="vertical"
            android:layout_marginLeft="2.5dp"
            android:layout_marginStart="2.5dp"
            android:id="@+id/ll1"
            android:gravity="center"
            android:background="@color/themeColor2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:gravity="center"
                android:text="1"/>


            <TextView
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:text="Assignments"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/themeColor3"
            android:layout_marginLeft="2.5dp"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/ll2"
            android:layout_marginStart="2.5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginEnd="2.5dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:gravity="center"
                android:text="2"/>


            <TextView
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="10dp"
                android:text="Examinations"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2.5dp"
            android:layout_marginEnd="2.5dp"
            android:layout_marginLeft="2.5dp"
            android:layout_marginStart="2.5dp"
            android:orientation="vertical"
            android:id="@+id/ll3"
            android:gravity="center"
            android:background="@color/themeColor4"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:gravity="center"
                android:text="3"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="14sp"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:text="Class Test"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2.5dp"
            android:layout_marginStart="2.5dp"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/ll4"
            android:layout_marginEnd="2.5dp"
            android:layout_marginRight="2.5dp"
            android:background="@color/themeColor5"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:gravity="center"
                android:text="4"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="14sp"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:text="Extra Classes"/>

        </LinearLayout>





    </TableRow>
</LinearLayout>
