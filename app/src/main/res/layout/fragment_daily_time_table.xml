<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context="com.jazzyarchitects.studentassistant.Fragment.DailyTimeTable"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="@color/themeColor3">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="17sp"
            android:text="Day"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/todayView"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="17sp"
            android:text="Time"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:gravity="right|end|center_vertical"
            android:paddingBottom="5dp"
            android:id="@+id/timeView"
            android:background="@color/themeColor3"/>



    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/horizontalScrollView"
        android:layout_weight="1.3">


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:id="@+id/timeTable" />

        <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent">-->
            <!--<include-->
                <!--layout="@layout/table_daily_complete"-->
                <!--android:layout_width="match_parent"-->
                <!--android:id="@+id/table"-->
                <!--android:layout_height="match_parent" />-->
        <!--</LinearLayout>-->

    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:id="@+id/detailLayout"
        android:orientation="vertical"
        android:background="#FFF">

        <include
            layout="@layout/subject_detail_layout"
            android:id="@+id/subjectDetailLayout"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />




    </RelativeLayout>


</LinearLayout>
