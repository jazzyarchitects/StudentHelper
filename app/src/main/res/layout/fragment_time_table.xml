<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jazzyarchitects.studentassistant.Fragment.TimeTable"
    android:weightSum="10">

    <include layout="@layout/table_complete"
        android:id="@+id/timeTableLayout"
        android:layout_below="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFF"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_weight="3">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/subjectList" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="@dimen/floatingActionButtonSize"
            android:layout_height="@dimen/floatingActionButtonSize"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_action_add"
            android:scaleType="center"
            app:borderWidth="2dp"
            app:elevation="5dp"
            android:id="@+id/addSubject"
            />



    </RelativeLayout>
</LinearLayout>
