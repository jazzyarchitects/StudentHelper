<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.jazzyarchitects.studentassistant.Fragment.SubjectList">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/emptyView">


        <TextView
            android:id="@+id/noSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/noSubject"
            android:textColor="@color/themeColor5"
            android:textSize="17sp"
            android:visibility="visible" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/cal_big"/>

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addSubject"
        android:visibility="gone"
        android:clipToPadding="false" />

    <TextView
        android:id="@+id/addSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15sp"
        android:background="@color/themeColor4"
        android:layout_alignParentBottom="true"
        android:text="+ ADD NEW SUBJECT"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>
